rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null 
             && request.auth.token.email.matches('.*@gettupp[.]com$');
    }

    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // Secure Collections (Admin Only)
    match /invoices/{docId} { allow read, write: if isAdmin(); }
    match /payments/{docId} { allow read, write: if isAdmin(); }
    match /subscriptions/{docId} { allow read, write: if isAdmin(); }
    match /clients/{docId} { allow read, write: if isAdmin(); }
    match /disputes/{docId} { allow read, write: if isAdmin(); }
    
    // Other collections (Preserve existing logic or default to secure)
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    match /site_content/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /knowledge_base/{nodeId} {
      allow read, write: if isAdmin();
    }
    
    match /shoots/{shootId} {
      allow read, write: if isAdmin();
    }

    match /user_preferences/{userId} {
      allow read, write: if isAuth() && request.auth.uid == userId;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
