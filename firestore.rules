rules_version = '2';

// ðŸ” GettUpp OS Firestore Security Rules
// Deploy these to Firebase Console > Firestore > Rules

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // LEADS COLLECTION
    // ========================================
    // Public: Anyone can create a lead (pilot-intake form)
    // Admin: Only authenticated users can read/update/delete
    match /leads/{leadId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // ========================================
    // SITE CONTENT COLLECTION  
    // ========================================
    // Public: Anyone can read (landing page content)
    // Admin: Only authenticated users can write
    match /site_content/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // ========================================
    // KNOWLEDGE BASE COLLECTION
    // ========================================
    // Private: Only authenticated users can read/write
    // This is internal business intelligence data
    match /knowledge_base/{nodeId} {
      allow read, write: if request.auth != null;
    }
    
    // ========================================
    // SHOOTS COLLECTION (Operations)
    // ========================================
    // Private: Only authenticated users
    match /shoots/{shootId} {
      allow read, write: if request.auth != null;
    }
    
    // ========================================
    // USER PREFERENCES (future)
    // ========================================
    match /user_preferences/{userId} {
      // Users can only read/write their own preferences
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ========================================
    // CATCH-ALL: Deny everything else
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
